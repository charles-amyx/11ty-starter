<section class="justify-between max-w-screen-xl py-8 mx-auto prose md:flex sm:py-20">
    <div class="w-full px-8 mb-8 md:w-2/3 md:mb-0">
        <h2 class="mt-0 text-3xl">{{ twoCol.title }}</h2>
        {{ twoCol.content | safe}}
        <div class="flex flex-wrap gap-4 mt-8 text-center">
            <a class="block w-full px-12 py-3 text-sm font-bold tracking-wide text-white no-underline uppercase transition rounded shadow bg-sky-700 sm:w-auto active:bg-rose-500 hover:bg-rose-700 focus:outline-none focus:ring hover:shadow-xl" href="{{ hero.button01.link }}">
                {{ hero.button01.text }}
            </a>

            <button class="block w-full px-12 py-3 text-sm font-bold tracking-wide no-underline uppercase transition rounded shadow bg-sky-900 text-sky-100 sm:w-auto hover:bg-rose-700 active:text-rose-500 focus:outline-none focus:ring hover:shadow-xl" @click="$refs.form.scrollIntoView(); $nextTick(() => $refs.input.focus());">
                {{ hero.button02.text }}
            </button>
        </div>
    </div>
    <div class="w-full px-8 md:w-1/3">
        <picture class="block w-full mt-0">
            <source class="object-cover" media="(min-width: 380px)" type="image/webp" width="100%" height="auto" srcset="{{ twoCol.image.path }}.webp">
            <source class="object-cover" media="(min-width: 380px)" type="image/jpeg" width="100%" height="auto" srcset="{{ twoCol.image.path }}.jpg">
            <img class="object-cover w-full h-auto" width="380" height="570" src="{{ twoCol.image.path }}.jpg" alt="{{ twoCol.image.alt }}">
        </picture>
    </div>
</section>