{% extends "layouts/base.njk" %}
{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/hero.njk" %}
    {% if title == "Home" %}
      {% if benefits %}
        {% include "partials/benefits-icon-bar.njk" %}
      {% endif %}
    {% endif %}
    {% if title == "Home" %}
      {% if form %}
        <article class="max-w-screen-xl grid-cols-2 px-4 py-8 mx-auto sm:grid sm:gap-20 sm:px-6 lg:px-8 lg:py-20">
        {% else %}
          <article class="max-w-2xl px-4 py-8 mx-auto sm:px-6 lg:px-8 lg:py-20">
          {% endif %}
        {% endif %}

        <section>
          <h1 class="text-3xl font-bold leading-tight text-gray-900">
            {{ intro.title }}
          </h1>
          <div class="py-8 leading-8 text-gray-600">
            <p class="text-xl">{{ intro.desc }}</p>
          </div>
          <div class="prose prose-lg text-gray-500 prose-gray">{{ content | safe }}</div>
        </section>
        {% if title == "Home" %}
          {% if form %}
            {% include "partials/form.njk" %}
          {% endif %}
        {% endif %}
      </article>
      {% if accordions %}
        {% include "partials/accordion.njk" %}
      {% endif %}

    </main>
  {% endblock %}