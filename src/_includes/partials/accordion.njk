<section class="w-full py-20 bg-slate-100">
    <div class="max-w-screen-xl mx-auto">
        <h2 class="text-2xl font-bold text-center sm:text-4xl">{{ accordions.title }}</h2>
    </div>
    <div class="max-w-screen-xl mx-auto mt-16 bg-white border border-gray-200">
        <ul class="shadow-box" x-data="{selected:0}" x-init="console.log('i\'m being initialized!')">
            {% for accordion in accordions.accordion %}
                <li class="relative border-b border-gray-200">
                    <button type="button" class="w-full px-8 py-6 text-left" @click="selected !== {{ accordion.id }} ? selected = {{ accordion.id }} : selected = null">
                        <div class="flex items-center justify-between">
                            <h3>
                                {{ accordion.title }}
                            </h3>
                        </div>
                    </button>
                    <div class="relative overflow-hidden transition-all duration-700 max-h-0" style="" x-ref="container{{ accordion.id }}" x-bind:style="selected == {{ accordion.id }} ? 'max-height: 999px' : ''">
                        <div class="p-6">
                            {{ accordion.content | safe }}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>