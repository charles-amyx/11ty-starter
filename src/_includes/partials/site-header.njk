<header class="bg-gray-900">
    <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <div class="md:flex md:items-center md:gap-12">
                <a class="block px-4 py-2 text-2xl font-extrabold leading-none tracking-wider transition bg-transparent rounded-lg text-sky-300 lg:-ml-8 hover:bg-gray-800 focus:bg-gray-80 hover:text-sky-200 focus:text-sky-200" href="/">
                    <span class="sr-only">Home</span>
          āxōlōtl
        </a>
            </div>
            <div class="hidden md:block">
                <nav role="navigation" aria-label="main" aria-labelledby="header-navigation">
                    <h2 class="sr-only" id="header-navigation">Header navigation</h2>
                    <ul class="flex items-center gap-16 text-sm">
                        {% for item in navigation.items %}
                            {% if item.url == page.url %}
                                {%
            set highlight = 'cursor-default' %}
                                {% set current =
            'aria-current="page"' %}
                                {% set highlight = 'underline' %}
                            {%
            else %}
                                {% set highlight = 'no-underline' %}
                                {% set current = '' %}
                            {% endif %}
                            <li>
                                <a href="{{ item.url }}" class="text-white font-bold transition hover:text-white/75 focus:text-white/75 {{ highlight }}" {{
                current
                }}>
                                    {{ item.text }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>

                </nav>
            </div>
            <div class="flex items-center gap-4">
                <div class="sm:flex sm:gap-4">
                    <div class="hidden sm:flex">
                        <a href="/about/" class="rounded-md bg-sky-700 px-5 py-2.5 text-sm font-bold tracking-wide text-white hover:bg-rose-700 focus:bg-rose-700 transition uppercase">
              Do A Thing
            </a>
                    </div>
                </div>
                <div class="block md:hidden">
                    <button class="p-2 text-white transition bg-gray-800 rounded hover:text-white/75">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke="currentcolor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m4 6h16m4 12h16m4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>